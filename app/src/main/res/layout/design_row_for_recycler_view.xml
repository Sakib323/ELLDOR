<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_marginBottom="50dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line1"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#E4E4E4"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/image_recyclerView_id"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:padding="10dp"
                android:src="@drawable/img1" />

            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_width="30dp"
                android:layout_height="40dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_store_mall_directory_24" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_baseline_phone_24" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginLeft="35dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <TextView
                    android:id="@+id/tvfirstname_recyclerView_id"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Hasan Market"
                    android:textColor="#03A9F4"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/tvlastname_recyclerView_id"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Sylhe,Zindabazar"
                    android:textColor="#03A9F4"
                    android:textSize="10sp" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

</RelativeLayout>